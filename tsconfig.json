{
    "ts-node": {
        "files": true
    },
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "sourceMap": true,
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "declaration": true,
        "lib": ["es2017", "es2018.promise"],
        "outDir": "./build/",
        "noImplicitAny": false,
        "baseUrl": "src",
        "experimentalDecorators": true,
        "strictNullChecks": false
    },
    "include": ["src", "src/abi/*.json", "src/disabled-tokens.json"],
    "exclude": ["node_modules"]
}
